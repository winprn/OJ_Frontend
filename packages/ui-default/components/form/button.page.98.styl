@import './var.inc.styl'

.button
  box-sizing: border-box
  border: none
  background: #c0c0c0
  border-radius: 0
  min-width: 75px;
  min-height: 23px;
  padding: 0 12px;

  &:not(:disabled)
    &:active
      box-shadow: --border-sunken-outer, --border-sunken-inner
      padding: 2px 11px 0 13px;

.button.inverse
  line-height: rem($form-control-height - 4)
  border: 2px solid #FFF
  background: none

  &, &:visited
    &, .typo &
      color: #FFF

  &:not(.disabled)
    &:hover, &:focus
      border-color: $immersive-primary-color
      background: none
      box-shadow: none
      &, .typo &
        color: $immersive-primary-color
